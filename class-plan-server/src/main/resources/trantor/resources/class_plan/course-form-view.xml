<View title="编辑课程">
<!--    <Record key="course" model="class_plan_Course" />-->
    <Form key="course" model="class_plan_Course">
        <Fields>
            <Field name="cid" label="课程编号"/>
            <Field name="cname" label="课程名称"/>
            <Field name="teacher" :show="false" :submit="true"/>
        </Fields>
        <Actions>
            <Action label="新增" layout="Footer" :show="!this.data.id" type="Submit" action="class_plan_Course_create" after="GoBack" />
            <Action label="修改" layout="Footer" :show="!!this.data.id" type="Submit" action="class_plan_Course_update" after="GoBack" />
            <Action label="自定义新增" layout="Footer" :show="!this.data.id" type="Submit" action="class_plan_Course_CourseServerAction::create" after="GoBack" />
        </Actions>
    </Form>
    <!-- lookUpFrom 属性可以将某个表单的值用作另外一个表单的字段提交，在多个 Form 一起提交的场景非常有用。 -->
    <TableForm title="教师信息" model="class_plan_Teacher" lookupFrom="course.teacher">
        <Fields>
            <Field name="tid" label="教师工号"/>
            <Field name="tname" label="教师名"/>
        </Fields>
    </TableForm>
